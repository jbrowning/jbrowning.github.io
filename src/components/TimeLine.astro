---
const { title, subtitle, skills } = Astro.props;
---

<div class="flex">
  <div class="timeline-line-container">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span
      class="timeline-line bg-primary block h-full w-[2px] translate-x-[7px]"
    ></span>
  </div>
  <div class="timeline-description-container bd-grid px-5">
    <h3 class="font-semibold mb-1">{title}</h3>
    <span class="font-light text-sm">{subtitle}</span>
    {
      Array.isArray(skills) && (
        <>
          <div>
            {skills.map((skill: string) => (
              <span class="badge badge-secondary mr-1 mb-1">{skill}</span>
            ))}
          </div>
        </>
      )
    }
    <p class="my-2 prose max-w-none">
      <slot />
    </p>
  </div>
</div>
